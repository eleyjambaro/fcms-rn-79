<resources>

    <!-- Base application theme. -->
    <!-- Note: Changed from parent="Theme.AppCompat.DayNight.NoActionBar"
    to parent="Theme.AppCompat.Light.NoActionBar" to disable Android 10 Dark mode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- <item name="android:textColor">#000000</item> -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        <item name="android:datePickerDialogTheme">@style/DialogDatePicker.Theme</item>


        <!-- Disable Android 10 Dark mode -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- Configuration for DialogDatePicker.theme. -->
    <style name="DialogDatePicker.Theme" parent="Theme.AppCompat.Light.Dialog">
        <!-- BackgroundColor of the date modal -->
        <item name="colorAccent">#ffb048</item>
        <item name="colorControlActivated">#fb8e00</item>
        <!-- Change textColor of the date modal -->
        <item name="android:textColorPrimary">#000000</item>
    </style>

</resources>
